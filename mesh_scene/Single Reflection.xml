<scene version="2.1.0">

<!-- Defaults, these can be set via the command line: -Darg=value -->


<!-- Camera and Rendering Parameters -->

	<integrator type="path" id="elm__0" name="elm__0">
		<integer name="max_depth" value="12"/>
	</integrator>

<!-- Materials -->

	<bsdf type="diffuse" id="mat-itu_concrete" name="mat-itu_concrete">
		<rgb value="1.000000 0.000000 0.300000" name="reflectance"/>
	</bsdf>
	<bsdf type="diffuse" id="mat-itu_marble" name="mat-itu_marble">
		<rgb value="0.284233 0.146437 0.061892" name="reflectance"/>
	</bsdf>
	<bsdf type="diffuse" id="mat-itu_metal" name="mat-itu_metal">
		<rgb value="0.290000 0.250000 0.210000" name="reflectance"/>
	</bsdf>

<!-- Emitters -->

	<emitter type="constant" id="World" name="World">
		<rgb value="1.000000 1.000000 1.000000" name="radiance"/>
	</emitter>

<!-- Shapes -->

	<!-- Floor: 20x20 meters -->
	<shape type="ply" id="mesh-Piano" name="mesh-Piano">
		<string name="filename" value="meshes/Piano.ply"/>
		<boolean name="face_normals" value="true"/>
		<ref id="mat-itu_concrete" name="bsdf"/>
		<transform name="to_world">
			<scale x="10" y="10" z="1"/>
		</transform>
	</shape>

	<!-- Building 1: x=0, y=10, width=7, height=10 -->
	<!-- Using elements to create a 7x10 meter building -->
	<shape type="ply" id="mesh-building1-1" name="mesh-building1-1">
		<string name="filename" value="meshes/element-itu_marble.ply"/>
		<boolean name="face_normals" value="true"/>
		<ref id="mat-itu_marble" name="bsdf"/>
		<transform name="to_world">
			<translate x="0" y="10" z="0"/>
			<scale x="7" y="10" z="3"/>
		</transform>
	</shape>
	<shape type="ply" id="mesh-building1-2" name="mesh-building1-2">
		<string name="filename" value="meshes/element-itu_metal.ply"/>
		<boolean name="face_normals" value="true"/>
		<ref id="mat-itu_metal" name="bsdf"/>
		<transform name="to_world">
			<translate x="0" y="10" z="0"/>
			<scale x="7" y="10" z="3"/>
		</transform>
	</shape>

	<!-- Building 2: x=8, y=0, width=12, height=8 -->
	<shape type="ply" id="mesh-building2-1" name="mesh-building2-1">
		<string name="filename" value="meshes/element_001-itu_marble.ply"/>
		<boolean name="face_normals" value="true"/>
		<ref id="mat-itu_marble" name="bsdf"/>
		<transform name="to_world">
			<translate x="8" y="0" z="0"/>
			<scale x="12" y="8" z="3"/>
		</transform>
	</shape>
	<shape type="ply" id="mesh-building2-2" name="mesh-building2-2">
		<string name="filename" value="meshes/element_001-itu_metal.ply"/>
		<boolean name="face_normals" value="true"/>
		<ref id="mat-itu_metal" name="bsdf"/>
		<transform name="to_world">
			<translate x="8" y="0" z="0"/>
			<scale x="12" y="8" z="3"/>
		</transform>
	</shape>

<!-- Volumes -->

</scene>
